# AI Agent Environment Variables
# 复制此文件为 .env 并填写实际值

# ============================================
# Application
# ============================================
APP_ENV=development
APP_NAME=AI-Agent
DEBUG=true

# ============================================
# Server
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_agent

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================
# Vector Database
# ============================================
QDRANT_URL=http://localhost:6333

# ============================================
# Security
# ============================================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ============================================
# LLM API Keys
# ============================================
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# ============================================
# Storage
# ============================================
WORK_DIR=./workspace
DATA_DIR=./data

# ============================================
# Sandbox
# ============================================
SANDBOX_ENABLED=true
SANDBOX_TIMEOUT=300

# ============================================
# Agent
# ============================================
MAX_ITERATIONS=20
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# ============================================
# HITL (Human-in-the-Loop)
# ============================================
HITL_ENABLED=true
HITL_TIMEOUT=300

# ============================================
# Checkpointing
# ============================================
CHECKPOINT_ENABLED=true
CHECKPOINT_INTERVAL=5
CHECKPOINT_TTL=86400

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# SonarCloud (代码质量检测)
# ============================================
# 从 https://sonarcloud.io/account/security 获取
SONAR_TOKEN=
# 你的 GitHub 用户名或组织名
SONAR_ORGANIZATION=